<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ScrollView>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     >
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="220dp"
                         android:background="@drawable/banners"
                         android:textAlignment="center"
                         android:text="OUR SERVICES"
                         android:textSize="20sp"
                         android:gravity="bottom"
                         android:textColor="@color/colorWhite"
                         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:id="@+id/shopping"
            android:background="@color/colorGrapeFruit"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/outline_shopping_basket_white_24dp"
                android:tint="@color/colorWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorGrapeFruitDark"
                android:text="Shopping"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:id="@+id/bus"
            android:background="@color/colorBitterSweet"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/outline_commute_white_24dp"
                android:tint="@color/colorWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorBitterSweetDark"
                android:text="Bus Booking"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:id="@+id/laundry"
            android:background="@color/colorFlower"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/outline_event_white_24dp"
                android:tint="@color/colorWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorFlowerDark"
                android:text="Laundry"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>

    </LinearLayout>

                     <!-- Second Row-->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="3"
                         >
                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/food"
                             android:background="@color/colorGrass"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_event_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorGrassDark"
                                 android:text="Food Delivery"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/parcel"
                             android:background="@color/colorBlueJeans"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_event_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorBlueJeansDark"
                                 android:text="Parcel Delivery"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/appointments"
                             android:background="@color/colorLavander"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_calendar_today_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorLavanderDark"
                                 android:text="Make Appointments"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>


                     </LinearLayout>
                     <!-- End Second Row-->
                     <!-- Third Row-->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="3"
                         >
                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/ecitizen"
                             android:background="@color/colorMint"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_event_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorMintDark"
                                 android:text="E-citizen"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/bill"
                             android:background="@color/colorAqua"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_event_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorAquaDark"
                                 android:text="Bill Payments"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="120dp"
                             android:layout_weight="1"
                             android:layout_margin="2dp"
                             android:orientation="vertical"
                             android:id="@+id/gas"
                             android:background="@color/colorPinkRose"
                             >
                             <ImageView
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:layout_marginTop="20dp"
                                 android:layout_gravity="center"
                                 android:src="@drawable/outline_event_white_24dp"
                                 android:tint="@color/colorWhite"
                                 />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="8dp"
                                 android:layout_marginTop="30dp"
                                 android:background="@color/colorPinkRoseDark"
                                 android:text="Gas Delivery"
                                 android:textSize="18sp"
                                 android:textAlignment="center"
                                 android:textColor="@color/colorWhite"
                                 />

                         </LinearLayout>


                     </LinearLayout>
                     <!--End Third Row-->
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>